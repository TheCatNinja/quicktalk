CC = gcc
CFLAGS = -Wall -Wextra -std=c11

OBJS = main.o menu.o moderation.o structs.o

all: app

app: $(OBJS)
	$(CC) $(CFLAGS) -o app $(OBJS)

main.o: main.c menu.h moderation.h
menu.o: menu.c menu.h moderation.h
moderation.o: moderation.c moderation.h
structs.o: structs.c moderation.h

clean:
	del /Q *.o app.exe 2>nul || true